<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <InvariantGlobalization>true</InvariantGlobalization>
    <RootNamespace>CertTools.AzureCreateSigningCert</RootNamespace>
    <SupportedOSPlatformVersion>10.0.26100.0</SupportedOSPlatformVersion>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <AnalysisLevel>latest</AnalysisLevel>
    <TrimMode>partial</TrimMode>
    <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
    <Title>Code Signing Certificate Creation Tool for Azure Key Vault</Title>
    <AssemblyTitle>$(Title)</AssemblyTitle>
    <Description>A console application to create a x.509 code signing certificate to sign binary files (EXE, DLL) and installation packages (MSIX, MSI)
The tool will create the certificate in the designated Azure Key Vault.
    </Description>
    <ApplicationIcon>AzureCreateSigningCert.ico</ApplicationIcon>
    <PackAsTool>True</PackAsTool>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>AzureCreateSigningCert</PackageId>
    <PackageOutputPath>..\..\..\bin</PackageOutputPath>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageIcon>verified_128.png</PackageIcon>
    <PackageProjectUrl>https://github.com/MichaelKoster70/CryptoTools</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="AzureCreateSigningCert.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\ArtWork\verified_128.png">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
    <None Update="readme.md">
      <PackagePath>\</PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Identity" Version="1.15.0" />
    <PackageReference Include="Azure.Security.KeyVault.Certificates" Version="4.8.0" />
    <PackageReference Include="Azure.Security.KeyVault.Keys" Version="4.8.0" />
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AzureCertCore\AzureCertCore.csproj" />
  </ItemGroup>
</Project>
